{# {{kint(src)}} #}
{% if src starts with 'https://youtu.be/' %}
    {% set src = src|replace({'youtu.be/': 'www.youtube.com/embed/'}) %}
{% elseif src starts with 'https://www.youtube.com/watch' %}
      {% set src = src|replace({'www.youtube.com/watch?v=': 'www.youtube.com/embed/'}) %}
{% else %}
    {% set src = src|replace({'youtu.be/': 'www.youtube.com/embed/'}) %}
{% endif %}
{# {% set src = src|replace({'youtu.be/': 'www.youtube.com/embed/'}) %} #}
<div class="col-sm-12" >
<iframe class="mx-auto d-block object-fit-contain rounded " src="{{ src }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>