<div class="card  m-1 p-1  ">
  <div class="card-content m-1 p-1 row ">
    <div class="col-md-4 d-flex align-items-center">
      {{ pattern('image',{
          alt: alt_image,
          src: image_url
      })}}
    </div>
    <div class="col-md-8 text-card text-justify">
      {{ pattern('text',{
          text: text,
          title: title
      })}}
      {{ pattern('button',{
          text: 'more...',
          url: url
      })}}
    </div>
  </div>
</div>
